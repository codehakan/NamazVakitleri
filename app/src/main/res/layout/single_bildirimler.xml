                android:layout_toStartOf="@+id/switch_yatsi"
                android:layout_toLeftOf="@+id/switch_yatsi"
                android:layout_toEndOf="@+id/lbl_vakit_yatsi"
                android:layout_toRightOf="@+id/lbl_vakit_yatsi"
                android:enabled="false"
                android:gravity="center"
                android:hint="15"
                android:inputType="number"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textColorHint="#4DFFFFFF"
                android:textColorLink="#fff" />

            <Switch
                android:id="@+id/switch_yatsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:theme="@style/SCBSwitch" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
